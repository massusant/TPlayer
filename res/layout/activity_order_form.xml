<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <requestFocus />

    <Button
        android:id="@+id/seat_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="席别" />

    <Button
        android:id="@+id/ticket_for_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seat_type"
        android:text="票种" />

    <EditText
        android:id="@+id/passenger_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ticket_for_people"
        android:ems="10"
        android:hint="姓名" />

    <Button
        android:id="@+id/id_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/passenger_name"
        android:text="证件类型" />

    <EditText
        android:id="@+id/id_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/id_type"
        android:ems="10"
        android:hint="证件号码" />

    <EditText
        android:id="@+id/cellphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/id_code"
        android:ems="10"
        android:hint="手机号码" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guide_panel"
        android:gravity="center_vertical" >
        
      <ImageView
          android:id="@+id/verify_code_image"
          android:scaleType="fitStart"
          android:layout_width="120dp"
          android:layout_height="match_parent"
          android:clickable="true"
          android:onClick="onVerifyCodeImageClick" />

        <EditText
            android:id="@+id/verify_code_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>    
    
    <LinearLayout
        android:id="@+id/guide_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="&lt;- 上一步" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onSubmitClick"
            android:text="下一步 ->" />
    </LinearLayout>


</RelativeLayout>