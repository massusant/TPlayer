<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <Button
        android:id="@+id/ticket_for_people"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="票种" />

    <Button
        android:id="@+id/seat_type"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ticket_for_people"
        android:text="席别" />

    <EditText
        android:id="@+id/passenger_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ticket_for_people"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/seat_type"
        android:ems="10"
        android:hint="姓名" />

    <Button
        android:id="@+id/id_type"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/passenger_name"
        android:text="证件类型" />

    <EditText
        android:id="@+id/id_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_type"
        android:layout_alignTop="@+id/id_type"
        android:layout_toRightOf="@+id/id_type"
        android:ems="10"
        android:hint="证件号码" />

    <EditText
        android:id="@+id/moblephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/remove_line"
        android:layout_alignBottom="@+id/remove_line"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/id_code"
        android:layout_toLeftOf="@+id/save_info"
        android:ems="10"
        android:hint="手机号码" />

    <CheckBox
        android:id="@+id/save_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/remove_line"
        android:layout_alignTop="@+id/remove_line"
        android:layout_toLeftOf="@+id/remove_line"
        android:text="收藏" />
    
    <Button
        android:id="@+id/remove_line"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/id_code"
        android:text="X" />

    <Button
        android:id="@+id/add_one_below"
        android:text="增加"
        android:layout_below="@+id/moblephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
</RelativeLayout>